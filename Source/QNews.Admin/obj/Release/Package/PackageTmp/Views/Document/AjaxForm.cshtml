@model QNews.Base.Document
@{
    ViewBag.SoKyHieu = ViewBag.ActionText + " văn bản";
    Layout = "~/Views/Shared/_Ajax.cshtml";
}
<script type="text/javascript">
    $(function () {

        var addUrl = @((ViewBag.Action == QNews.Admin.Controllers.ActionType.Add).ToString().ToLower());

        if(addUrl)
        {
            $("#DocumentForm #SoKyHieu").keyup(function(){
                $("#DocumentForm #Url").val(UnicodeToAscii($(this).val()));
            });

            $("#DocumentForm #SoKyHieu, #DocumentForm #Url").blur(function(){ //Sau khi thoát kiểm tra url
                $.post("/Document/CheckUrl", { "url" : ""+$("#DocumentForm #Url").val()+""}, function(data){
                    if(data){
                        createMessage('Đã có lỗi xảy ra.', 'Url <strong>'+$("#DocumentForm #Url").val()+'</strong> đã tồn tại trong hệ thống. Vui lòng nhập url khác.');
                        //$("#DocumentForm #Url").focus();
                    }
                });
            });
        }

        createCKFider('Image', 120);
        createCKFiderFile('FileAttach');
        LoadCKEDITOR('Details', true);
        $.datepicker.setDefaults($.datepicker.regional['vi']);

        $("#NgayBanHanh, #NgayHieuLuc").datepicker({
            dateFormat: "dd/mm/yy",
            changeMonth: true
        });



        $("#DocumentForm").validate({
            rules: {
                NgayBanHanh:
                {
                    //date: true
                },
                NgayHieuLuc:
                {
                    //date: true
                },
                SoKyHieu:
                {
                    required: true,
                    minlength: 2,
                    maxlength: 255
                },
                Url:
                {
                    required: true,
                    minlength: 2,
                    maxlength: 255
                },
                TrichYeu:
                {
                    minlength: 15,
                    maxlength: 1000
                }
            },
            submitHandler: function () { //onSubmit
                updateEditor();

                $.post(urlPostAction, $("#DocumentForm").mySerialize(), function (data) {
                    if (data.Erros)
                        createMessage("Đã có lỗi xảy ra", data.Message); // Tạo thông báo lỗi
                    else {
                        $("#dialog-form").dialog('close'); //Đóng form thêm mới - sửa
                        createCloseMessage("Thông báo", data.Message, '#Page=1&itemId=' + data.ID + '&message=' + data.Message + '&temp=' + Math.floor(Math.random() * 11) + ''); // Tạo thông báo khi click đóng thì chuyển đến url đích
                    }
                });
                return false;
            }
        });

        $("#close").click(function () {
            $("#dialog-form").html("").dialog('close');
        });

        $("select.fullwidthForm").select2({ width: '100%' });
    });
</script>

<form id="DocumentForm">
    @Html.AntiForgeryToken()<input type="hidden" name="do" id="do" value="@ViewBag.Action" />
    <input type="hidden" name="ItemID" id="ItemID" value="@Model.ID" />
    <input type="hidden" id="listValueFileAttach" name="listValueFileAttach" />
    <input type="hidden" id="listValueFileAttachRemove" name="listValueFileAttachRemove" />
    <input type="hidden" name="TagValues" id="TagValues" />
    <fieldset class="forms">
        <legend>Thông tin về văn bản</legend>
        <table class="tableforms" cellspacing="1" width="100%">
            <tr>
                <td style="width:160px;"><label>Tên văn bản</label></td>
                <td>
                    <input type="text" name="SoKyHieu" id="SoKyHieu" value="@Model.SoKyHieu" />
                </td>
            </tr>
            <tr>
                <td class="label"><label>Url văn bản</label></td>
                <td>
                    @if (@ViewBag.Action == QNews.Admin.Controllers.ActionType.Add)
                    {
                        <input type="text" name="Url" id="Url" />
                    }
                    else
                    {
                        <input type="text" disabled name="Url" id="Url" value="@Model.Urls.Select(o => o.UrlID).FirstOrDefault()" />
                    }
                </td>

            </tr>

            <tr>
                <td><label>Trích yếu</label></td>
                <td>
                    <textarea rows="5" id="TrichYeu" name="TrichYeu" spellcheck="false">@Model.TrichYeu</textarea>
                </td>
            </tr>

            <tr>
                <td><label>Ngày ban hành</label></td>
                <td>
                    <input type="text" name="NgayBanHanh" id="NgayBanHanh" value="@((Model.NgayBanHanh.HasValue) ? Model.NgayBanHanh.Value.ToString("dd/MM/yyyy") : "")" />
                </td>
            </tr>

            <tr>
                <td><label>Ngày hiệu lực</label></td>
                <td>
                    <input type="text" name="NgayHieuLuc" id="NgayHieuLuc" value="@((Model.NgayHieuLuc.HasValue) ? Model.NgayHieuLuc.Value.ToString("dd/MM/yyyy") : "")" />
                </td>
            </tr>

            <tr>
                <td><label>Người ký</label></td>
                <td>
                    <input type="text" name="NguoiKy" id="NguoiKy" value="@Model.NguoiKy" />
                </td>
            </tr>

            <tr>
                <td><label>Loại văn bản</label></td>
                <td>
                    
                    <select name="LoaiVanBanID" id="LoaiVanBanID" class="fullwidthForm">
                        @foreach (var item in ViewBag.AllCategory)
                        {
                            <option value="@item.ID" @(Model.LoaiVanBanID == item.ID ? " selected" : "")>@item.Title</option>
                        }
                    </select>

                </td>
            </tr>

            <tr>
                <td><label>Cơ quan ban hành</label></td>
                <td>
                    @{
                        var AllIssueID = Model.DocumentIssues.Select(o => o.ID).ToList();
                    }
                    <select name="IssueID" id="IssueID" class="fullwidthForm" multiple="multiple">
                        @foreach (var item in ViewBag.AllIssue)
                        {
                            <option value="@item.ID" @(AllIssueID.Contains(item.ID) ? " selected" : "")>@item.Title</option>
                        }
                    </select>

                </td>
            </tr>

            <tr>
                <td><label>Chương trình</label></td>
                <td>
                    @{
                        var AllEventID = Model.DocumentScopes.Select(o => o.ID).ToList();
                    }
                    <select name="EventID" id="EventID" class="fullwidthForm" multiple="multiple">
                        @foreach (var item in ViewBag.AllEvent)
                        {
                            <option value="@item.ID" @(AllEventID.Contains(item.ID) ? " selected" : "")>@item.Title</option>
                        }
                    </select>

                </td>
            </tr>

            <tr>
                <td><label>File đính kèm</label></td>
                <td>
                    <button id="FileAttachButton" type="button" class="primaryAction">Chọn file văn bản</button>
                    <br />
                    <i>Hoặc nhập đường link file từ liên kết bên ngoài</i>
                    <br />
                    <input type="text" value="@((!string.IsNullOrEmpty(Model.FileAttach) && Model.FileAttach.Contains("http")) ? Model.FileAttach : string.Empty)" name="OtherFileAttach" id="OtherFileAttach" />

                    <div id="FileAttachValues">
                        <input type="hidden" name="FileAttach" value="@Model.FileAttach" />
                        <p><a href="@(string.IsNullOrEmpty(Model.FileAttach) ? "javascript:;" : Model.FileAttach)" target="_blank">@(string.IsNullOrEmpty(Model.FileAttach) ? "..." : Model.FileAttach)</a></p>
                        <button id="FileAttachButtonDelete" onclick="clearFKFiderFile('FileAttach');" type="button" class="primaryAction">Xóa file</button>
                    </div>
                </td>
            </tr>

            <tr>
                <td><label>Nội dung chi tiết</label></td>
                <td>
                    <textarea rows="5" id="Details" name="Details" spellcheck="false">@Model.Details</textarea>
                </td>
            </tr>

   
            <tr>
                <td><label>Cho phép gửi bình luận</label></td>
                <td>
                    <input type="checkbox" name="AllowComment" id="AllowComment" value="True" @((Model.AllowComment) ? " checked" : string.Empty) />
                </td>
            </tr>

            <tr>
                <td colspan="2">
                    <hr />
                </td>
            </tr>
            <tr>
                <td class="submit" colspan="2">
                    <button id="submit" type="submit" class="primaryAction">@ViewBag.ActionText</button>
                    <button id="reset" type="reset" class="primaryAction">Nhập lại</button>
                    <button id="close" type="button" class="primaryAction">Đóng lại</button>
                </td>
            </tr>
        </table>
    </fieldset>
</form>