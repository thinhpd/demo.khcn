    <script src="~/Content/Admin/js/timepicker/src/i18n/jquery-ui-timepicker-vi.js"></script>
    <script src="/Content/Admin/js/timepicker/dist/jquery-ui-sliderAccess.js"></script>
    <script src="/Content/Admin/js/select2-3.5.2/select2.js"></script>
    <script src="/Content/Admin/js/select2-3.5.2/select2_locale_vi.js"></script>
    <link href="/Content/Admin/site.css" rel="stylesheet" type="text/css" />
    <link href="/Content/Admin/css/jquery.multiSelect.css" rel="stylesheet" type="text/css" />
    <link href="/Content/Admin/css/jquery.treeview.css" rel="stylesheet" type="text/css" />
    <link href="/Content/Admin/css/fileuploader.css" rel="stylesheet" type="text/css" />
    <link href="/Content/Admin/css/jquery-ui-1.8.6.gray-green.css" rel="stylesheet" type="text/css" />
    <link href="/Content/Admin/css/gridview.css" rel="stylesheet" type="text/css" />
    <link href="/Content/Admin/css/colorpicker.css" rel="stylesheet" type="text/css" />
    <link href="/Content/Admin/css/jquery.autocomplete.css" rel="stylesheet" type="text/css" />
    <link href="/Content/Admin/css/styles.css" rel="stylesheet" type="text/css" />
    <script type="text/javascript" src="/Content/Uploadify/swfobject.js"></script>
    <script type="text/javascript" src="/Content/Uploadify/jquery.uploadify.v2.1.4.min.js"></script>
    <link href="/Content/Uploadify/uploadify.css" type="text/css" rel="stylesheet" />
    <link href="/Content/Admin/js/select2-3.5.2/select2.css" rel="stylesheet" />
    <link href="/Content/Admin/js/timepicker/dist/jquery-ui-timepicker-addon.css" rel="stylesheet" />

    <!--[if gte IE 9]>
        <link href="/Content/Admin/css/ie.css" media="screen, projection" rel="stylesheet" type="text/css" />
        <![endif]-->
    <!--[if IE 8]>
        <link href="/Content/Admin/css/ie8.css" media="screen, projection" rel="stylesheet" type="text/css" />
        <![endif]-->
    <!--[if lte IE 7]>
        <link href="/Content/Admin/css/ie7.css" media="screen, projection" rel="stylesheet" type="text/css" />
        <![endif]-->

    <script type="text/javascript">
        $(document).ready(function () {
            $("select").select2({ width: 258 });
            $("#changeCaptcha").click(function () {
                var rand = Math.floor(Math.random() * 11);
                $("#imgCaptcha").attr("src", "/captcha.ashx?id=" + rand + "");
            });
        });
    </script>
    @Scripts.Render("~/bundles/jqueryval")
</head>
<body>
    <style>
        .form-login {
        }

        .form-login {
            margin: 20px auto;
            width: 430px;
            padding: 30px 15px;
            background: #f1f1f1;
            border: 1px solid #ccc;
        }

            .form-login .form-group {
                padding-bottom: 10px;
            }

                .form-login .form-group label {
                    float: left;
                    width: 135px;
                    text-align: right;
                    padding-top: 5px;
                    padding-right: 10px;
                }

                .form-login .form-group .input input {
                    border: 1px solid #ccc;
                    padding: 5px 8px;
                    width: 210px;
                }

        html, body {
            height: auto !important;
            background: none;
        }
    </style>

    <div class="box-content">

        <div class="form-login">
            <h3 style="text-align:center; margin-bottom:15px;">Đăng nhập hệ thống quản trị nội dung - @QNews.Utils.Configs.SITE_NAME</h3>

            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                if (!string.IsNullOrEmpty(ViewBag.Message))
                {
                    <p>@ViewBag.Message</p>
                }
                <div class="form-group">
                    <label>Tài khoản</label>
                    <div class="col-md-10 input">
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label>Mật khẩu 1</label>
                    <div class="col-md-10 input">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label><a id="changeCaptcha" href="javascript:;">Mã bảo mật</a></label>
                    <div class="col-md-10 input">
                        <img src="/Captcha.ashx" style="width:228px;" id="imgCaptcha" />
                    </div>
                </div>

                <div class="form-group">
                    <label>Nhập mã bảo mật</label>
                    <div class="col-md-10 input">
                        @Html.TextBoxFor(m => m.Captcha, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Captcha, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <div class="checkbox">
                            @Html.CheckBoxFor(m => m.RememberMe)
                            <label>Ghi nhớ</label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label>&nbsp;</label>
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Đăng nhập" class="btn btn-default" />
                    </div>
                </div>
            }
        </div>
    </div>
</body>
</html>
