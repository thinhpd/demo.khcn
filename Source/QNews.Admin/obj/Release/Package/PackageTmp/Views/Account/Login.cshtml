    <script src="@Url.Content("~/Content/Admin/js/fileuploader.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/Admin/js/jquery.autocomplete.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/Admin/js/GridView.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/Admin/ckeditor/ckeditor.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/Admin/ckfinder/ckfinder.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/Admin/js/QPortal.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/Admin/js/colorpicker.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/Admin/js/jquery.idTabs.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/Admin/js/jquery.number.js")" type="text/javascript"></script>
