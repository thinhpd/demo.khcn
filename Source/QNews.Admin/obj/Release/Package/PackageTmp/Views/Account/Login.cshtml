@model LoginViewModel
@{Layout = null;}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Đăng nhập - Thăng Long - Hà Nội</title>
    <meta name="viewport" content="width=device-width">
    <script src="@Url.Content("~/Content/Admin/js/jquery-1.7.2.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/Admin/js/jquery.validate.js")" type="text/javascript"></script>
