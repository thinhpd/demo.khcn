@model QNews.Base.Album
@{
    ViewBag.Title = "Quản lý album ảnh";
    bool hasAdd = HttpContext.Current.User.IsInRole("Admin") || HttpContext.Current.User.IsInRole("Add");
    bool hasEdit = HttpContext.Current.User.IsInRole("Admin") || HttpContext.Current.User.IsInRole("Edit");
    bool hasDelete = HttpContext.Current.User.IsInRole("Admin") || HttpContext.Current.User.IsInRole("Delete");
    bool hasApprove = HttpContext.Current.User.IsInRole("Admin") || HttpContext.Current.User.IsInRole("Approve");
}
<script type="text/javascript">

    urlLists = '@Url.Action("ListItems", "AlbumPicture")?CategoryID=@Model.ID';
    urlForm = '@Url.Action("AjaxForm", "AlbumPicture")?CategoryID=@Model.ID';
    urlForms = '@Url.Action("Addnew", "AlbumPicture")?CategoryID=@Model.ID';
    urlFormApprove = '@Url.Action("AjaxApprove", "AlbumPicture")';
    urlPostAction = '@Url.Action("Actions", "AlbumPicture")';
    urlView = '@Url.Action("AjaxView", "AlbumPicture")';
    formWidth = 1100;
    formHeight = 650;
    viewWidth = 1100;
    viewHeight = 650;

    $(document).ready(function () {
        initAjaxLoad(urlLists, "#JobGriditems");

        $("#gridSearch").submit(function () {
            var form = $("#gridSearch");
            window.location.href = '#' + getValueFormMutilSelect(form);
            return false;
        });

        $("#btn_add").click(function () {
            $("#dialog-form").dialog(
				{
				    title: "Thêm mới album ảnh",
				    width: formWidth,
				    height: formHeight
				}
			).load(encodeURI(urlForm + "&do=Add")).dialog("open");
            return false;
        });
        $("#btn_adds").click(function () {
            $("#dialog-form").dialog(
                {
                    title: "Thêm mới album ảnh nhiều ảnh",
                    width: formWidth,
                    height: formHeight
                }
            ).load(encodeURI(urlForms + "&do=Add")).dialog("open");
            return false;
        });

        $.datepicker.setDefaults($.datepicker.regional['vi']);
        $("#TuNgay").datepicker({
            dateFormat: "dd/mm/yy",
            changeMonth: true,
            onSelect: function (dateStr) {
                var min = $(this).datepicker('getDate') || new Date(); // Selected date or today if none
                $('#DenNgay').datepicker('option', { minDate: min });
            }
        });

        $("#DenNgay").datepicker({
            dateFormat: "dd/mm/yy",
            changeMonth: true,
            minDate: $("#TuNgay").val()
        });

        $("select.fullwidth").select2({ width: 605 });
    });

    function getVersion(versionId) {
        var tokenValid = $("input[name='__RequestVerificationToken']").val();
        $.post(urlPostAction, { "do": "reset", "ItemID": versionId, "__RequestVerificationToken": "" + tokenValid + "" }, function (data) {
            if (data.Erros)
                createMessage("Đã có lỗi xảy ra", data.Message); // Tạo thông báo lỗi
            else {
                $("#dialog-form").dialog('close'); //Đóng form thêm mới - sửa
                createCloseMessage("Thông báo", data.Message, '#Page=1&itemId=' + data.ID + '&message=' + data.Message + '&temp=' + Math.floor(Math.random() * 11) + ''); // Tạo thông báo khi click đóng thì chuyển đến url đích
            }
        });
    }

</script>
<div class="zone zone-content">
    <h1>Album ảnh: @Model.Title</h1>


    <fieldset class="forms">
        <legend>Thông tin album</legend>
        <table class="tableforms tabledetails" cellspacing="1" width="100%">
            <tr>
                <td style="width:160px;" class="label"><label>Tên album ảnh</label></td>
                <td>
                    @Html.DisplayFor(model => model.Title)
                </td>
            </tr>

            <tr>
                <td class="label"><label>Mô tả</label></td>
                <td>
                    @Html.Raw(Model.Description)
                </td>
            </tr>

            <tr>
                <td class="label"><label>Ảnh đại diện</label></td>
                <td>
                    <img src="@(string.IsNullOrEmpty(Model.Image) ? "/Album/Admin/images/no_image.gif?width=120" : Model.Image)" style="width:120px" />
                </td>
            </tr>


            <tr>
                <td class="label"><label>Ngày xuất bản</label></td>
                <td>@((Model.PublishDate.HasValue) ? Model.PublishDate.Value.ToString("dd/MM/yyyy") : "")</td>
            </tr>

            <tr>
                <td class="label"><label>Người tạo</label></td>
                <td>@Model.AspNetUser_CreateBy.UserName <i>(@Model.CreateDate.ToString("dd/MM/yyyy hh:mm:ss tt"))</i></td>
            </tr>

            <tr>
                <td class="label"><label>Người sửa cuối</label></td>
                <td>@Model.AspNetUser_ModifyBy.UserName <i>(@Model.ModifyDate.ToString("dd/MM/yyyy hh:mm:ss tt"))</i></td>
            </tr>
        </table>
    </fieldset>
    
    <div class="headear">
        <div style="width: 700px; padding: 10px;" class="searchbox advance leftright">
            <form id="gridSearch">
                <fieldset class="bulk-actions">
                    <div class="row">
                        <div class="left">
                            <label for="Keyword">Từ khóa:</label>
                            <input type="text" name="Keyword" id="Keyword" value="Từ khóa tìm kiếm" onfocus="if(this.value=='Từ khóa tìm kiếm') this.value='';" onblur="if(this.value=='') this.value='Từ khóa tìm kiếm';" />
                        </div>
                        <div class="right">
                            <label for="SearchIn">Tìm trong:</label>
                            <select name="SearchIn" id="SearchIn" class="mutil" multiple="multiple">
                                <option value="Title" selected>Tên ảnh</option>
                                <option value="Description">Mô tả</option>
                            </select>
                        </div>
                    </div>

                    <div class="row">
                        <div class="left">
                            <label>Ngày tạo:</label>
                            <span><i>Từ</i></span>
                            <input type="text" name="TuNgay" id="TuNgay" style="width:92px" />
                            <span><i>Đến</i></span>
                            <input type="text" name="DenNgay" id="DenNgay" style="width:91px" />
                        </div>

                        <div class="right">
                            <label>Trạng thái:</label>
                            <select name="StatusID">
                                <option value="">Tất cả</option>
                                @foreach (var item in ViewBag.AllStatus)
                                {
                                    <option value="@item.ID">@item.Name</option>
                                }
                            </select>
                        </div>
                    </div>

                    <div class="row">
                        <div class="left">
                            <label>Người tạo:</label>
                            <select name="CreateBy">
                                <option value="">Tất cả</option>
                                @foreach (var item in ViewBag.AllUser)
                                {
                                    <option value="@item.ID">@item.UserName</option>
                                }
                            </select>
                        </div>

                        <div class="right">
                            <label>Sửa cuối:</label>
                            <select name="ModifyBy">
                                <option value="">Tất cả</option>
                                @foreach (var item in ViewBag.AllUser)
                                {
                                    <option value="@item.ID">@item.UserName</option>
                                }
                            </select>
                        </div>
                    </div>

                    <div class="row">
                        <div class="submit">
                            <button name="submit.Search" type="submit">Tìm kiếm</button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>

        <div class="manage">
            @if (hasAdd)
            {
                @Html.ActionLink("Thêm mới", "Create", new { }, new { @class = "add button primaryAction", @id = "btn_add" })
                @Html.ActionLink("Thêm mới nhiều ảnh", "Create", new { }, new { @class = "add button primaryAction", @id = "btn_adds" })
            }
        </div>
    </div>
    


    <div id="JobGriditems">
    
    </div>
</div>