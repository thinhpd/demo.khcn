@model QNews.Base.Advertise
@{
    ViewBag.Title = ViewBag.ActionText + " quảng cáo";
    Layout = "~/Views/Shared/_Ajax.cshtml";
}
<script type="text/javascript">
    $(function () {

        createCKFider('Image', 120);
        $.datepicker.setDefaults($.datepicker.regional['vi']);

        $("#NgayBatDau, #NgayKetThuc").datetimepicker({
            controlType: 'select',
            oneLine: true,
            timeFormat: 'HH:mm:ss',
            dateFormat: 'dd/mm/yy'
        })


        $("#AdvertiseForm").validate({
            rules: {
                NgayBatDau:
                {
                    //date: true
                },
                NgayKetThuc:
                {
                    //date: true
                },
                Title:
                {
                    required: true,
                    minlength: 2,
                    maxlength: 255
                },
                Url:
                {
                    required: true,
                    minlength: 2,
                    maxlength: 255
                },
                Description:
                {
                    minlength: 15,
                    maxlength: 1000
                }
            },
            submitHandler: function () { //onSubmit
                updateEditor();

                $.post(urlPostAction, $("#AdvertiseForm").mySerialize(), function (data) {
                    if (data.Erros)
                        createMessage("Đã có lỗi xảy ra", data.Message); // Tạo thông báo lỗi
                    else {
                        $("#dialog-form").dialog('close'); //Đóng form thêm mới - sửa
                        createCloseMessage("Thông báo", data.Message, '#Page=1&itemId=' + data.ID + '&message=' + data.Message + '&temp=' + Math.floor(Math.random() * 11) + ''); // Tạo thông báo khi click đóng thì chuyển đến url đích
                    }
                });
                return false;
            }
        });

        $("#close").click(function () {
            $("#dialog-form").html("").dialog('close');
        });

        $("select.fullwidthForm").select2({ width: '100%' });
    });
</script>

<form id="AdvertiseForm">
    @Html.AntiForgeryToken()<input type="hidden" name="do" id="do" value="@ViewBag.Action" />
    <input type="hidden" name="ItemID" id="ItemID" value="@Model.ID" />
    <input type="hidden" id="listValueFileAttach" name="listValueFileAttach" />
    <input type="hidden" id="listValueFileAttachRemove" name="listValueFileAttachRemove" />
    <input type="hidden" name="TagValues" id="TagValues" />
    <fieldset class="forms">
        <legend>Thông tin về quảng cáo</legend>
        <table class="tableforms" cellspacing="1" width="100%">
            <tr>
                <td style="width:160px;"><label>Tên quảng cáo</label></td>
                <td>
                    <input type="text" name="Title" id="Title" value="@Model.Title" />
                </td>
            </tr>
            <tr>
                <td><label>Mô tả</label></td>
                <td>
                    <textarea rows="5" id="Description" name="Description" spellcheck="false">@Model.Description</textarea>
                </td>
            </tr>

            <tr>
                <td><label>Trang liên kết</label></td>
                <td>
                    <input type="text" value="@Model.Link" name="Link" id="Link" />
                </td>
            </tr>

            <tr>
                <td><label>Hình ảnh đại diện</label></td>
                <td>
                    <button id="ImageButton" type="button" class="primaryAction">Chọn hỉnh ảnh đại diện</button>
                    <br />
                    <i>Hoặc nhập đường link ảnh từ liên kết bên ngoài</i>
                    <br />
                    <input type="text" value="@((!string.IsNullOrEmpty(Model.Image) && Model.Image.Contains("http")) ? Model.Image : string.Empty)" name="OtherImage" id="OtherImage" />

                    <div id="ImageValues">
                        <input type="hidden" name="Image" value="@Model.Image" />
                        <img src="@(string.IsNullOrEmpty(Model.Image) ? "/Content/Admin/images/no_image.gif" : Model.Image)" style="border:1px solid #ccc; width:120px; margin-top:2px; float:left;" />
                        <button id="ImageButtonDelete" onclick="clearFKFider('Image', 120);" type="button" class="primaryAction" style="margin:25px 10px;">Xóa ảnh</button>
                    </div>
                </td>
            </tr>

            <tr>
                <td><label>Ngày bắt đầu</label></td>
                <td>
                    <input type="text" name="NgayBatDau" id="NgayBatDau" value="@((Model.NgayBatDau.HasValue) ? Model.NgayBatDau.Value.ToString("dd/MM/yyyy") : "")" />
                </td>
            </tr>

            <tr>
                <td><label>Ngày kết thúc</label></td>
                <td>
                    <input type="text" name="NgayKetThuc" id="NgayKetThuc" value="@((Model.NgayKetThuc.HasValue) ? Model.NgayKetThuc.Value.ToString("dd/MM/yyyy") : "")" />
                </td>
            </tr>
            <tr>
                <td><label>Vùng hiển thị</label></td>
                <td>
                    
                    <select name="ZoneID" id="ZoneID" class="fullwidthForm">
                        @*
                            <option value="1" @(Model.ZoneID == 1 ? "selected" : "")>Bên trái</option>
                            <option value="2" @(Model.ZoneID == 2 ? "selected" : "")>Trang chủ vùng 1</option>
                            <option value="3" @(Model.ZoneID == 3 ? "selected" : "")>Trang chủ vùng 2</option>
                            <option value="4" @(Model.ZoneID == 4 ? "selected" : "")>Trang chủ vùng 3</option>*@

                        <option value="2" @(Model.ZoneID == 1 ? "selected" : "")>Trang chủ vùng 1</option>
                        <option value="3" @(Model.ZoneID == 2 ? "selected" : "")>Trang chủ vùng 2</option>
                        <option value="4" @(Model.ZoneID == 3 ? "selected" : "")>Trang chủ vùng 3</option>
                        <option value="1" @(Model.ZoneID == 4 ? "selected" : "")>Phía trên bên phải trang cấp 2</option>
                        <option value="1" @(Model.ZoneID == 5 ? "selected" : "")>Phía dưới bên phải trang cấp 2</option>
                    </select>

                </td>
            </tr>

            <tr>
                <td><label>Thứ tự hiển thị</label></td>
                <td>
                    <input type="text" value="@Model.Order" name="Order" id="Order" />
                </td>
            </tr>


            <tr>
                <td colspan="2">
                    <hr />
                </td>
            </tr>
            <tr>
                <td class="submit" colspan="2">
                    <button id="submit" type="submit" class="primaryAction">@ViewBag.ActionText</button>
                    <button id="reset" type="reset" class="primaryAction">Nhập lại</button>
                    <button id="close" type="button" class="primaryAction">Đóng lại</button>
                </td>
            </tr>
        </table>
    </fieldset>
</form>