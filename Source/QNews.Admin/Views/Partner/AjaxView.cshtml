@model QNews.Base.Partner

@{
    ViewBag.Title = "Xem chi tiết";
    Layout = "~/Views/Shared/_Ajax.cshtml";
}

<fieldset class="forms">
    <table class="tableforms tabledetails" cellspacing="1" width="100%">
        <tr>
            <td style="width:160px;" class="label"><label>Tên chương trình văn bản</label></td>
            <td>
                @Html.DisplayFor(model => model.Title)
            </td>
        </tr>

        <tr>
            <td class="label"><label>Ảnh đại diện</label></td>
            <td>
                <img src="@(string.IsNullOrEmpty(Model.Image) ? "/Album/Admin/images/no_image.gif?width=120" : Model.Image)" style="width:120px" />
            </td>
        </tr>
        <tr>
            <td class="label"><label>Mô tả</label></td>
            <td>
                @Html.Raw(Model.Description)
            </td>
        </tr>
        <tr>
            <td class="label"><label>Link liên kết</label></td>
            <td>
                @Html.DisplayFor(model => model.Link)
            </td>
        </tr>
        <tr>
            <td class="label"><label>Cho phép hiển thị</label></td>
            <td>
                @Grid.DisplayShow(Model.Title, Model.Show)
            </td>
        </tr>

        <tr>
            <td class="label"><label>Thứ tự hiển thị</label></td>
            <td>
                @Model.Order
            </td>
        </tr>


    </table>
</fieldset>
