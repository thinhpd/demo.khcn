@model QNews.Base.AspNetUser
@{
    ViewBag.Title = ViewBag.ActionText + " Người dùng";
    Layout = "~/Views/Shared/_Ajax.cshtml";
}
<script type="text/javascript">
    $(function () {


        $("#ResetPasswordForm").validate({
            rules: {
                Password:
                {
                    required: true,
                    minlength: 6,
                    maxlength: 32
                },
                Password_2:
                {
                    required: true,
                    equalTo: $("#Password")
                }
            },
            submitHandler: function () { //onSubmit

                $.post(urlPostAction, $("#ResetPasswordForm").serialize({ checkboxesAsBools: true }), function (data) {
                    if (data.Erros)
                        createMessage("Đã có lỗi xảy ra", data.Message); // Tạo thông báo lỗi
                    else {
                        $("#dialog-form").dialog('close'); //Đóng form thêm mới - sửa
                        createCloseMessage("Thông báo", data.Message, '#Page=1&itemId=' + data.ID + '&message=' + data.Message + '&temp=' + Math.floor(Math.random() * 11) + ''); // Tạo thông báo khi click đóng thì chuyển đến url đích
                    }
                });
                return false;
            }
        });

        $("#close").click(function () {
            $("#dialog-form").html("").dialog('close');
        });
    });
</script>

<form id="ResetPasswordForm">
    @Html.AntiForgeryToken()
    <input type="hidden" name="do" id="do" value="@ViewBag.Action"/>
    <input type="hidden" name="GuidID" id="GuidID" value="@Model.Id" />
    <fieldset class="forms">
        <legend>Reset mật khẩu</legend>
        <table class="tableforms" cellspacing="1" width="100%">
            <tr>
                <td style="width:140px;"><label>Mật khẩu mới</label></td>
                <td>
                    <input type="text" name="Password" id="Password"  />
                </td>
            </tr>
            <tr>
                <td><label>Nhập lại mật khẩu mới</label></td>
                <td>
                    <input type="text" name="Password_2" id="Password_2" />
                </td>
            </tr>
            <tr>
                <td class="submit" colspan="2">
                    <button id="submit" type="submit" class="primaryAction">@ViewBag.ActionText</button>
                    <button id="reset" type="reset" class="primaryAction">Nhập lại</button>
                    <button id="close" type="button" class="primaryAction">Đóng lại</button>
                </td>
            </tr>
        </table>
    </fieldset>

    <fieldset class="forms">
        <legend>Thông tin thành viên</legend>
        <table class="tableforms tabledetails" cellspacing="1" width="100%">
            <tr>
                <td style="width:140px;" class="label"><label>Tài khoản</label></td>
                <td>
                    @Html.DisplayFor(model => model.UserName)
                </td>
            </tr>

            <tr>
                <td class="label"><label>Họ tên</label></td>
                <td>
                    @Html.DisplayFor(model => model.UserFullName)
                </td>
            </tr>

            <tr>
                <td class="label"><label>Email</label></td>
                <td>
                    @Html.DisplayFor(model => model.Email)
                </td>
            </tr>

            <tr>
                <td class="label"><label>Điện thoại</label></td>
                <td>
                    @Html.DisplayFor(model => model.PhoneNumber)
                </td>
            </tr>


            <tr>
                <td class="label"><label>Giới tính</label></td>
                <td>
                    @((Model.Sex.HasValue) ? ((Model.Sex.Value) ? "Nam" : "Nữ") : "N/A")
                </td>
            </tr>

          
            <tr>
                <td class="label"><label>Vai trò trên hệ thống</label></td>
                <td>
                    @string.Join(", ", @Model.AspNetRoles.Select(o => o.Name))
                </td>
            </tr>

            <tr>
                <td class="label"><label>Tài khoản liên kết</label></td>
                <td>
                    @string.Join(", ", @Model.AspNetUserLogins.Select(o => o.LoginProvider))
                </td>
            </tr>
        </table>
    </fieldset>
</form>