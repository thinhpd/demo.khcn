@model List<QNews.Models.WeatherViewModel>
@{Layout = null;}
@if (Model.Count > 0)
{
    <div class="today">
        <img src="@Model.FirstOrDefault().Image" />
        <p class="temper">@Model.FirstOrDefault().MinTemper<sup>o</sup>C - @Model.FirstOrDefault().MaxTemper<sup>o</sup>C </p>
        <p class="des">@Model.FirstOrDefault().Description</p>
    </div>
    <ul class="next">
        @foreach (var item in Model.Skip(1))
        {
            <li>
                <span class="date">@item.Title</span>
                <img src="@item.Image" />
                <span class="temper">@item.MinTemper<sup>o</sup>C - @item.MaxTemper<sup>o</sup>C</span>
            </li>
        }
    </ul>
}
else
{
    <p>Dữ liệu đang được cập nhật.</p>
}