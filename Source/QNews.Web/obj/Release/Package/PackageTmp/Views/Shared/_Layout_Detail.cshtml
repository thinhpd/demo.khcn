</head>

<body>
    @{
        QNews.Models.LayoutViewModels model = new QNews.Data.Publishing.ContentDA().getLayoutModels();
    }
    <div class="wrapper">

        <!-- header -->
        <header>
            <div class="top">
                <div class="container">
                    <div class="logo">
                        <a href="/"><img src="~/Content/img/logo_w.png" alt="Văn phòng các chương trình Khoa học và Công nghệ Quốc gia" /></a>
                    </div>
                    <div class="right">
                        <div class="search">
                            <form method="get" action="/tim-kiem">
                                <div class="input">
                                    <input type="text" id="ipsearch" name="kwd" value="@Request["kwd"]" placeholder="Tìm kiếm" />
                                    <a id="btsearch" href="javascript:searchip('ipsearch');"><i class="fa fa-search"></i></a>
                                </div>
                            </form>
                        </div>
                        <div class="links">
                            <ul>
                                @*
                                    <li><span><a href="#"><i class="fa fa-users"></i> Gửi ý kiến</a></span></li>
                                    <li><span><a href="#"><i class="fa fa-envelope-o"></i> Email</a></span></li>
                                    <li><a href="#"><img src="~/Content/img/icon_vietnam.png" /></a></li>
                                    <li><a href="#"><img src="~/Content/img/icon_english.png" /></a></li>
                                *@
                            </ul>
                        </div>
                    </div>
                </div>

                <nav>
                    <div class="container">
                        <ul>
                            <li class="first"><a href="/"><i class="fa fa-home"></i></a></li>
                            @foreach (var item in model.LtsAllCategory.Where(o => o.ShowInTopMenu && o.ParentID == 0).OrderBy(o => o.Order))
                            {
                                <li class="menu_item_main" data-id="@item.ID">
                                    <a data-id="@item.ID" href="@(string.IsNullOrEmpty(item.CurrentUrl) ? "/" + item.Url : item.CurrentUrl)"><span>@item.Name</span></a>
                                    <div class="sub">
                                        @{
                                            var childs = model.LtsAllCategory.Where(o => o.Show && o.ParentID == item.ID && o.ShowInTopMenu).OrderBy(o => o.Order);
                                        }
                                        @if (childs.Count() > 0)
                                        {
                                            <ul>
                                                @foreach (var child in childs)
                                                {
                                                    <li><a data-id="@child.ID" href="@(string.IsNullOrEmpty(child.CurrentUrl) ? "/" + child.Url : child.CurrentUrl)"><span>@child.Name</span></a></li>
                                                }
                                            </ul>
                                        }
                                    </div>
                                </li>
                            }
                        </ul>
                    </div>
                </nav>
            </div>

        </header>
        <!-- header -->


        <div class="body">
         
            <!-- layouts -->
            @RenderBody()

            <!-- layouts -->

        </div>

        <footer>
            <div class="top">
                <div class="container">
                    <div class="left">
                        <ul class="social">
                            <li style="height:55px;"></li>
                            @*<li><a href="#"><span><i class="fa fa-facebook"></i></span></a></li>
                                <li><a href="#"><span><i class="fa fa-twitter"></i></span></a></li>
                                <li><a href="#"><span><i class="fa fa-google-plus"></i></span></a></li>
                                <li><a href="#"><span><i class="fa fa-youtube"></i></span></a></li>
                                <li><a href="#"><span><i class="fa fa-instagram"></i></span></a></li>
                                <li><a href="#"><span><i class="fa fa-linkedin"></i></span></a></li>*@
                        </ul>
                    </div>

                    <div class="right">
                        <ul class="links">
                            <li><a href="/">Trang chủ</a></li>
                            <li><span>|</span></li>
                            <li><a href="/lien-he">Liên hệ</a></li>
                            <li><span>|</span></li>
                            <li><a href="/so-do-website">Sơ đồ site</a></li>
                            <li><span>|</span></li>
                            <li><a href="/rss">RSS</a></li>
                            @{
                                string userAgent = System.Web.HttpContext.Current.Request.UserAgent.ToLower();
                            }
                            @if (userAgent.Contains("google") || userAgent.Contains("bing") || userAgent.Contains("yahoo"))
                            {
                                <li><span>|</span></li>
                                <li><a href="https://vanbanphapluat.co" title="Download văn bản pháp luật, công văn, TCVN">Văn bản pháp luật</a></li>
                                <li><span>|</span></li>
                                <li><a href="https://www.danhba.org" title="Tra cứu danh bạ điện thoại cố định">Danh bạ điện thoại</a></li>
                                <li><span>|</span></li>
                                <li><a href="https://thongtindoanhnghiep.co" title="Tra cứu mã số thuế công ty">Mã số thuế công ty</a></li>
                                <li><span>|</span></li>
                                <li><a href="https://www.downloadwallpapers.us" title="Download Desktop Wallpaper">Wallpaper</a></li>
                            }
                        </ul>
                    </div>
                </div>
            </div>

            <div class="bottom">
                <div class="container">
                    <div class="left">
                        <img src="Content/img/logo_footer.png" />
                        @(new HtmlString(model.footer.Value))
                    </div>
                </div>
            </div>
        </footer>

    </div>



    <script>window.jQuery || document.write("<script src='/Content/js/libs/jquery-1.11.3.min.js'>\x3C/script>")</script>
    <script type="text/javascript" src="~/Content/js/libs/jquery.newsTicker.js"></script>

    <script src="~/Content/js/libs/fancyBox/source/jquery.fancybox.pack.min.js"></script>
    <script src="~/Content/js/libs/fancyBox/lib/jquery.mousewheel-3.0.6.pack.js"></script>
    <script src="~/Content/js/functions.js"></script>
    <script>$(document).ready(initPage);</script>
    <script>


        function searchip(a) {
            var a = document.getElementById(a).value;
            var strs = a.replace(" ", "+");
            console.log(a);
            console.log(strs);
            window.location.href = "/tim-kiem?kwd=" + strs;
        }
        $(document).ready(function () {
            $("a.fancy").fancybox();

        });

